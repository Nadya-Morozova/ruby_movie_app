<h1>Movies</h1>

<table class="table table-striped table-bordered table-hover border-dark">
   <thead>
      <tr>
         <th>Name</th>
         <th>Year</th>
         <th>Film director</th>
         <th>Worldwide gross</th>
         <th colspan="3"></th>
      </tr>
   </thead>

   <tbody">
   <% @movies.each do |movie| %>
   <tr>
      <td><%=movie.name %></td>
      <td><%=movie.year %></td>
      <td><%=movie.director %></td>
      <td><%=movie.worldwide_gross %></td>
      <td><%= link_to 'Show', movie%></td>
      <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
      <td><%= link_to 'Destroy', movie, method: :delete,
         data: { confirm: 'Are you sure?' } %></td>
   </tr>
   <% end %>
   </tbody>
</table>
<br/>

<%= link_to "New Movie", new_movie_path, class: "btn btn-primary"%>